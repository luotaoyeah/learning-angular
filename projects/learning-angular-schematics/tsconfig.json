{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "declaration": true,
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6",
    "types": ["jasmine", "node"]
  },
  "exclude": ["src/*/files/**/*"],
  "include": ["src/**/*"]
}
