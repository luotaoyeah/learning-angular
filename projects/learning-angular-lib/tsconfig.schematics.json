{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "../../dist/learning-angular-lib/schematics",
    "rootDir": "schematics",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["jasmine", "node"]
  },
  "exclude": ["schematics/*/files/**/*"],
  "include": ["schematics/**/*"]
}
